<div class='alert alert-info'>
  This page only shows actively monitored layers.
</div>
<%= page_entries_info @layers %>
<br>
<%= paginate @layers %>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Layer</th>
      <th>Access</th>
      <th>Status</th>
      <th>Recent Status</th>
    </tr>
  </thead>

<% @layers.each do |layer| %>
  <tr>
    <td>
      <%= link_to content_tag(:span, '', class: 'glyphicon glyphicon-wrench'), {controller: 'layers', action: 'check_status', id: layer.id}, data: { no_turbolink: true }, target: '_blank', title: 'Check Status' %>
       |
      <%= link_to content_tag(:span, '', class: 'glyphicon glyphicon-globe'), "#{Settings.GEOBLACKLIGHT_URL}/catalog/#{layer.name}", target: '_blank', title: 'View in GeoBlacklight' %>
    </td>
    <td><%= link_to layer.name, layer %></td>
    <td><%= layer.layername %></td>
    <td><%= layer.access %></td>
    <td><%= latest_status(layer) %></td>
    <td><%= recent_status(layer) %></td>
  </tr>
<% end %>
</table>
